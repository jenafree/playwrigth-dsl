{
  "name": "playwrigth-dsl",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:demo": "playwright test tests/demo --reporter=list",
    "test:e2e": "playwright test tests/e2e --reporter=list",
    "test:smoke": "playwright test --grep @smoke",
    "test:critica": "playwright test --grep @critica",
    "test:chrome:headed": "playwright test --project=e2e-cliente --headed",
    "test:chrome:headless": "playwright test --project=e2e-cliente",
    "test:firefox": "playwright test --project=e2e-cliente --browser=firefox",
    "codegen": "playwright codegen",
    "lint": "eslint src/ tests/ --ext .ts,.js",
    "lint:fix": "eslint src/ tests/ --ext .ts,.js --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^24.2.1",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
